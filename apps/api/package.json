{
  "name": "@tasteos/api",
  "version": "0.1.0",
  "private": true,
  "description": "TasteOS backend API built with FastAPI and LangGraph",
  "scripts": {
    "dev": "python -m uvicorn tasteos_api.main:app --reload --host 0.0.0.0 --port 8000",
    "start": "python -m uvicorn tasteos_api.main:app --host 0.0.0.0 --port 8000",
    "test": "python -m pytest",
    "test:watch": "python -m pytest --watch",
    "lint": "python -m ruff check .",
    "lint:fix": "python -m ruff check . --fix",
    "format": "python -m ruff format .",
    "typecheck": "python -m mypy tasteos_api/",
    "migrate": "python -m alembic upgrade head",
    "migrate:create": "python -m alembic revision --autogenerate",
    "clean": "rm -rf __pycache__ .pytest_cache .mypy_cache"
  }
}
